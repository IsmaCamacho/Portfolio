---
import ServiceCard from "./ServiceCard.astro";
import { FaLaptopCode, FaBolt, FaRocket } from "react-icons/fa"; 
---

<section class="site-container mt-14 mx-auto max-w-6xl px-4">
	<h2
		class="text-4xl font-bold flex flex-col items-center gap-6 text-center whitespace-nowrap text-white md:flex-row md:items-center md:text-end"
	>
		<span class="hidden h-1.5 grow rounded-lg drop-shadow-[2px_2px_0_#0debd8] bg-[#7836cf] md:block"></span>
		<span class="drop-shadow-[2px_2px_0_#7836cf]">Servicios</span>
	</h2>

	<div class="mt-10 grid gap-6 md:grid-cols-3">
		<ServiceCard
			icon={FaLaptopCode}
			title="Apps Multiplataforma"
			description="Desarrollo de aplicaciones nativas para Android e iOS utilizando Kotlin y explorando soluciones modernas como .NET MAUI."
		/>
		<ServiceCard
			icon={FaBolt}
			title="Arquitectura Backend"
			description="Diseño de lógica de negocio robusta, gestión de servicios con Java/C# y optimización de bases de datos relacionales SQL."
		/>

		<ServiceCard
			icon={FaRocket}
			title="Soluciones de Gestión"
			description="Creación de sistemas de escritorio y herramientas de gestión empresarial con enfoque en arquitectura limpia y escalabilidad."
		/>
	</div>
</section>
