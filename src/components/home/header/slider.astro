---
const technologies = [
  "Java",
  "Kotlin",
  "Python",
  "csharp",           // Antes "C#"
  "JavaScript",
  "jetpack-compose",  // Antes "Jetpack Compose"
  "Ktor",
  "Hibernate",
  "dotnet",           // Antes ".NET"
  "Git",
  "Docker",
  "Postman",
  "Linux",
  "Ubuntu",
  "Firebase",
  "HTML5",
  "CSS3",
  "Json",
  "MySQL",
  "sql-server",       // Antes "SQL Server"
  "Oracle",
  "PostgreSQL",
  "Firestore",
];
---

<div class="relative overflow-x-hidden px-8 py-8">
  <div class="animate-scroll hover:animate-paused flex w-max gap-12 md:gap-20">
    {
      technologies.concat(technologies, technologies).map((tech) => (
        /* --- AQU√ç VA EL BLOQUE QUE ME HAS PASADO --- */
        <div class="group flex items-center gap-2 transition-all duration-300">
          <img
            src={`/svg/${tech}.svg`} 
            alt={tech}
            class="h-7 w-auto object-contain transition-transform group-hover:scale-110"
            width="30"
            height="30"
            loading="lazy"
          />
          <span class="text-lg font-medium text-white">
            {tech === "csharp" ? "C#" : 
             tech === "dotnet" ? ".NET" : 
             tech === "jetpack-compose" ? "Jetpack Compose" :
             tech === "sql-server" ? "SQL Server" : 
             tech}
          </span>
        </div>
        /* ------------------------------------------- */
      ))
    }
  </div>
</div>

<style is:global>
  @keyframes scroll {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-50%);
    }
  }
  .animate-scroll {
    animation: scroll 60s linear infinite;
  }

  @media (min-width: 768px) {
    .animate-scroll {
      animation-duration: 80s;
    }
  }
</style>
