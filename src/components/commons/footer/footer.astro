---
import SocialIcons from "../socialIcons/socialIcons.jsx";

const base = import.meta.env.BASE_URL; 
---

<footer class="bg-gray-950 text-white">
  <div
    class="container mx-auto flex flex-col items-center justify-between px-6 py-12 lg:flex-row lg:px-20"
  >
    <a href={`${base}/`} class="flex items-center">
      <h3
        class="text-[#69c7c7] text-4xl font-bold drop-shadow-[1.5px_1.5px_0_#7836cf]"
      >
        ICS
      </h3>
    </a>

    <nav class="mb-4 lg:mb-0">
      <ul class="flex flex-col items-center space-y-2 text-gray-400 lg:flex-row lg:items-start lg:space-y-0 lg:space-x-6">
        <li>
          <a href={`${base}/`} class="hover:text-[#552496] font-semibold">Inicio</a>
        </li>
        <li>
          <a href={`${base}/proyectos`} class="hover:text-[#552496] font-semibold">Proyectos</a>
        </li>
        <li>
          <a href={`${base}/about`} class="hover:text-[#552496] font-semibold">Sobre Mi</a>
        </li>
        <li>
          <a href={`${base}/contact`} class="hover:text-[#552496] font-semibold">Contacto</a>
        </li>
      </ul>
    </nav>

    <div class="flex space-x-4 ">
      <SocialIcons client:visible />
    </div>
  </div>

  <div
    class="w-full border-t border-gray-600 py-10 text-center text-sm text-gray-500"
  >
    isma.cama.sanc@gmail.com
  </div>
</footer>